<body>
    <form action="">
        <div>
            <input type="number" name="liczba1">
            
        </div>
        <div>
            <input type="number" name="liczba2">
            
        </div>
        <div><input type="radio" name="a"id="dod">dodawanie</div>
        <div><input type="radio" name="a"id="ode">odejmowanie</div>
        <div><input type="radio" name="a"id="mno">mnozenie</div>
        <div><input type="radio" name="a"id="dzi">dzielenie</div>
        <input type="submit" value="Oblicz">
    </form>
    <div class="Wynik">  </div>
    <script>
       const formularz = document.querySelector('form');
       const dod = document.getElementById('dod')
       const ode = document.getElementById('ode')
       const mno = document.getElementById('mno')
       const dzi = document.getElementById('die')
       const div = document.addEventListener('submit',function (e) {
           e.preventDefault();
           const liczba1 = document.querySelector('input[name="lcizba1"]').value*1;
           const liczba2 = document.querySelector('input[name="lcizba2"]').value*1;
      if(dod.checked == true)
      {
          div.textContent = liczb1 + liczba2;
      }
      if(ode.checked == true)
      {
          div.textContent = liczb1 - liczba2;
      }
      if(mno.checked == true)
      {
          div.textContent = liczb1 * liczba2;
      }
      if(dzi.checked == true)
      {
          div.textContent = liczb1 / liczba2;
      }
        });
    </script>
